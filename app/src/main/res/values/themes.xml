<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InPeace" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#BCBCBC</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.InPeace.Audiobooks" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#B5E7E7E7</item>
        <item name="colorPrimaryVariant">#B5E7E7E7</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#BCBCBC</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.InPeace.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AudioBookButton" parent="Widget.AppCompat.Button.Colored">
        <item name="background">@drawable/ic_audiobook_button</item>
        <item name="colorPrimary">#B5E7E7E7</item>
    </style>

    <style name="Theme.InPeace.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.InPeace.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FlatButton" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/grey</item>
        <item name="colorControlHighlight">@color/teal_700</item>
    </style>
</resources>